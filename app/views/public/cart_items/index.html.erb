<div class="container">
  <p class="notice"></p>
  <h2>ショッピングカート</h2>

  <div class="text-right">
    <%= link_to cart_items_destroy_all_path, method: :delete do%>
     <button class="btn btn-danger">カートを空にする</button>
    <% end %>
  </div>
  <p class="notice"></p>

  <table class="table cart_table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <% @cart_items.each do |cart_item| %>
     <tr>
       <td><%= cart_item.item.name %></td>
       <td>¥<%= cart_item.item.with_tax_price %></td>
       <td>
         <%= form_with model:cart_item, url: cart_items_path(cart_item), local: true do |f| %>
          <%= f.hidden_field:item_id, :value => cart_item.item.id %>
          <%= f.select :amount, [*(1..10)] %>&emsp;<%= f.submit '変更', class: "btn btn-success" %>
         <% end %>
       </td>
       <td>¥<%= cart_item.subtotal %></td>
       <td><% @total_price += cart_item.subtotal %></td>
       <td>
         <%= link_to cart_items_path(cart_item), method: :delete do %>
          <button class="btn btn-danger">削除</button>
         <% end %>
       </td>
     </tr>
    <% end %>
  </table>

   <div class="row">
     <%= link_to root_path do %>
      <button class="btn btn-primary">買い物を続ける</button>
     <% end %>
   </div>

   <table class="table">
     <tr>
       <th class="active">合計金額</th>
       <td>¥<%= @total_price.to_s(:delimited) %></td>
     </tr>
   </table>

   <div class="text-center">
     <button class="btn btn-success">情報入力に進む</button>
   </div>
</div>