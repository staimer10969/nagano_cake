<div class="container">
 <p class="notice"></p>
 <h2>会員情報編集</h2>
 <%= form_with(model:@customer, url:customers_information_path, local: true, method: :patch) do |f| %>

 <p class="notice"></p>
 <div class="field">
   <%= f.label :氏名 %>
   <%= f.text_field :last_name, autofocus: true %>
   <%= f.text_field :first_name, autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :フリガナ %>
   <%= f.text_field :last_name_kana, autofocus: true %>
   <%= f.text_field :first_name_kana, autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :郵便番号 %>
   <%= f.text_field :postal_code, autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :電話番号 %>
   <%= f.text_field :telephone_number, autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :メールアドレス %>
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
 </div>

 <p class="notice"></p>
 <div class="text-center">
   <%= f.submit "編集内容を保存", class: "btn btn-success" %>&emsp;
   <%= link_to "退会する", class: "btn btn-danger" %>
 </div>

 <% end %>

</div>