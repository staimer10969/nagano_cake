<body>
 <main>
    <div class="container">
     <p class="notice"></p>
     <h2>会員情報編集</h2>
      <div class="row">
       <div class="col-xl-12 ml-4">
        <%= form_with(model:@customer, url:customers_information_path, local: true, method: :patch) do |f| %>

        <p class="notice"></p>
        <div class="form-group">
          <%= f.label :氏名, class: "col-lg-3" %>
          <%= f.text_field :last_name, autofocus: true, class: "col-lg-3" %>
          <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ, class: "col-lg-3" %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "col-lg-3" %>
          <%= f.text_field :first_name_kana, autofocus: true,class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号, class: "col-lg-3" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :住所, class: "col-lg-3" %>
          <%= f.text_field :address, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号, class: "col-lg-3" %>
          <%= f.text_field :telephone_number, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス, class: "col-lg-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-lg-3" %>
        </div>

        <p class="notice"></p>
        <div class="text-center mt-5">
          <%= f.submit "編集内容を保存", class: "btn btn-success w-25" %>&emsp;
          <%= link_to "退会する", customers_confirm_withdraw_path, class: "btn btn-danger w-25" %>
        </div>

        <% end %>
      </div>
     </div>
    </div>
 </main>
</body>