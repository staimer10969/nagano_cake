<div class="container">
  <p class="notice"></p>
  <h2>注文情報確認</h2>

  <p class="notice"></p>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
        <% @cart_items.each do |cart_item| %>
         <tr>
           <td><%= cart_item.item.name %></td>
           <td><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
           <td><%= cart_item.amount %></td>
           <td><%= cart_item.subtotal %></td>
           <% @total_price += cart_item.subtotal %>
         </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p class="notice"></p>


  <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <div class="col-xs-3">
      <table class="table">
        <tbody>
          <tr>
            <td class="confirm-td">送料</td>
            <td>
              <%= @order.postage.to_s(:delimited) %>
              <%= f.hidden_field :postage, :value => @order.postage %>
            </td>
          </tr>

          <tr>
            <td class="confirm-td">商品合計</td>
            <td><%= @total_price %></td>
            <%= f.hidden_field :total_price, :value => @total_price+800 %>
          </tr>

          <tr>
            <td class="confirm-td">請求金額</td>
            <td><%= (@total_price+800).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

    <div class="row">
    <h4>支払方法</h4>&emsp;
    <%= @order.payment_method_i18n %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  </div>

    <p class="notice"></p>
    <div class="row">
     <h4>お届け先</h4>&emsp;
       〒<%= @order.postal_code.to_s.insert(3, "-") %>
       <%= f.hidden_field :postal_code, :value => @order.postal_code %>
       <%= @order.address %></br>
       <%= f.hidden_field :address, :value => @order.address %>
       &emsp;<%= @order.name %>
       <%= f.hidden_field :name, :value => @order.name %>
    </div>

    <p class="notice"></p>
    <div class="text-center">
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>