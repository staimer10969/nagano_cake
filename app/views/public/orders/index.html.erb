<div class="container">
  <p class="notice"></p>
  <h3>注文履歴一覧</h3>

  <table class="order-table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.to_s(:datetime_jp) %></td>
        <td>
          <%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>