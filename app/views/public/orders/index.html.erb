<body>
  <main>
    <div class="container">
      <h3>注文履歴一覧</h3>
      <div class="row">
          <p class="notice"></p>

        <div class="col-xl-12">
          <table class="table order-table col-lg-12 ml-2 table-bordered">
            <thead class="table-active">
              <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>注文詳細</th>
              </tr>
            </thead>

            <% @orders.each do |order| %>
            <tbody>
              <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                  〒<%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.name %>
                </td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                   <%= order_detail.item.name %></br>
                  <% end %>
                </td>

                <td><%= order.total_price.to_s(:delimited) %>円</td>
                <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>