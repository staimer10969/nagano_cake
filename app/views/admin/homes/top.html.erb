<body>
  <main>
      <div class="container">
        <h3>注文履歴一覧</h3>
          <div class="row">
            <p class="notice"></p>

              <div class="col-xl-12">
                  <table class="table order-table col-lg-12 ml-2">
                    <thead class "table-active">
                      <tr>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @orders.each do |order| %>
                       <tr>
                         <td class="col-xl-5">
                           <%= link_to admin_order_path(order) do %>
                            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                           <% end %>
                         </td>
                         <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                         <td><%= order.order_details.sum(:amount) %></td>
                       </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= paginate @orders %>
              </div>
          </div>
      </div>
  </main>
</body>