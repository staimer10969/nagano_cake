  <div class="container">
    <div class="row">
      <div class="col-xs-9">
        <p class="notice"></p>
        <h2>注文履歴一覧</h2>
          <table class="table order-table">
            <thead>
              <tr>
                <th class="active">購入日時</th>
                <th class="active">購入者</th>
                <th class="active">注文個数</th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
               <tr>
                 <td>
                   <%= link_to admin_order_path(order) do %>
                    <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                   <% end %>
                  </td>
                 <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                 <td><%= order.order_details.sum(:amount) %></td>
              <% end %>
               </tr>
            </tbody>
          </table>
          <%= paginate @orders %>
      </div>
    </div>
  </div>