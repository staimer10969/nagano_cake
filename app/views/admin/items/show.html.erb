<div class="container">
  <h2>商品詳細</h2>
  <div class="col-xs-4">
    <%= image_tag @item.get_image, size: "250x250" %>
  </div>
  <div class="col-xs-6">
    <div>
      <p><strong class="col-xs-2">商品名</strong><%= @item.name %></p>
    </div>

    <div>
      <p><strong class="col-xs-2">商品説明</strong><%= @item.introduction %></p>
    </div>

    <div>
      <p>
        <strong class="col-xs-2">税込価格（税抜価格）</strong>
        <%= @item.add_tax_price.to_s(:delimited) %> (<%= (@item.price).to_s(:delimited) %>)円
      </p>
    </div>

    <p class="notice"></p>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>

  </div>
</div>