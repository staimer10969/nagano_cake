<body>
  <main>
      <br>
      <br>
      <h2 class="item-show-admin">商品詳細</h2>
      <br>

        <div class="container mx-auto">
          <div class="row">
            <div class="col-lg-5 admin-item ml-5">
              <div class="item-image">
                <%= image_tag @item.get_image, size: "400x300" %>
              </div>
            </div>
            <div class="col-lg-5 mt-5">
              <table class="admin-item-table", width="100%">
                <tr>
                  <th width="20%">商品名</th>
                  <td><%= @item.name %></td>
                </tr>

                <tr>
                  <th width="20%">商品説明</th>
                  <td><%= @item.introduction %></td>
                </tr>

                <tr>
                  <th width="30%">税込価格<br>（税抜価格）</th>
                  <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</td>
                </tr>
              </table>

            </div>
          </div>
        </div>
            <br>
            <div class="text-center mt-5">
              <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success w-25" %>
            </div>
    <br>
    <br>
  </main>
</body>