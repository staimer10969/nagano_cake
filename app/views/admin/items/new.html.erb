<body>
  <main>
    <div class="container">
     <br>
     <h2>商品新規登録</h2>
     <br>
     <div class="col-lg-12">

      <%= form_with model: @item, url:admin_items_path, local:true do |f| %>

        <div class="field-group">
         <%= f.label :商品画像, class: "col-lg-2" %>
         <%= f.file_field:image, accept:"image/*" %>
        </div>
        <br>

        <div class="field-group">
         <%= f.label :商品名 %>
         <%= f.text_field :name, size:"30*5" %>
        </div>
        <br>

        <div class="field-group">
         <%= f.label :商品説明 %>
         <%= f.text_area :introduction, size:"30*30" %>
        </div>
        <br>

        <div class="field-group">
         <%= f.label :税抜価格 %>
         <%= f.text_field :price, size:"30*5"%>
         <%= f.label :円 %>
        </div>

        <br>
        <div class="text-center mt-5">
         <%= f.submit "新規登録", class: "btn btn-success w-25" %>
        </div>

      <% end %>

     </div>
    </div>
  </main>
</body>