<div class="container">
  <p class="notice"></p>
  <h2><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h2>

  <%= form_with(model: @customer, url:admin_customer_path, local: true, method: :patch) do |f| %>

  <p class="notice"></p>
  <div class="field">
    <%= f.label :"会員ID" %>
    <%= f.label :"#{@customer.id}" %>
  </div>

  <div class="field">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :"会員ステータス" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
  </div>

  <div class="actions">
    <%= f.submit '変更を保存', class: "btn btn-success" %>
  </div>
  <% end %>
</div>